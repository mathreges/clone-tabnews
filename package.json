{
  "name": "curso.dev",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose --file infra/compose.yaml up -d",
    "services:down": "docker compose --file infra/compose.yaml down",
    "services:stop": "docker compose --file infra/compose.yaml stop",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "npm run services:up && npm run wait-for-postgres && concurrently --names next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "npm run services:up && concurrently --names next,jest --hide next -k -s command-jest \"next dev\" \"jest --watchAll --runInBand\"",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate --migrations-dir infra/migrations  down",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@next/eslint-plugin-next": "^15.1.5",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.5",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "jest": "^29.6.2",
    "prettier": "^3.3.3"
  }
}
